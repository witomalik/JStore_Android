<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fitsSystemWindows="true">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticItemName"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Item Name"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticCategory"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Item Category"
            android:textSize="16dip" />
        <TextView
            android:id="@+id/item_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticStatus"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Item Status"
            android:textSize="16dip" />
        <TextView
            android:id="@+id/item_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticPrice"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Item Price"
            android:textSize="16dip" />
        <TextView
            android:id="@+id/item_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textSize="16dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/payMethod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="left"
        android:text="Payment Method"
        android:textSize="16dip" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay Now" />

        <RadioButton
            android:id="@+id/unpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay Later" />

        <RadioButton
            android:id="@+id/installment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Installment" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPeriod"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Installment Period"
            android:textSize="16dip" />

        <EditText
            android:id="@+id/installment_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticTotalPrice"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="Total Price"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textSize="16dip" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/hitung"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Count" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pesan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Order" />

</LinearLayout>
</ScrollView>